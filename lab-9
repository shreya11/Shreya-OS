{
	printf("\nEnter the burst time of the processes: ");
	scanf("%d",&c[i]);
}

printf("\nturnaround and waiting: ");
for(i=0;i<t;i++)
{
f=f+c[i];
	printf("\n %d", c[i]);
	printf("\npro %d: %d, %d", i+1,f,g);
	
		
		g=g+c[i];
}

printf("\n");

printf("\nTurn around time and waiting time of each process is: ");




}
