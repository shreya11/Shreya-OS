//code for earliest deadline first with gantt chart

#include<stdio.h>
#include<stdlib.h>


void time(int t)
{
int c[t][2];
int i,j;
int d[t];
int f=0;
int g;
printf("\nStarting time and burst time");
for(i=0;i<t;i++)
{
	for(j=0;j<2;j++)
	{
	scanf("%d",&c[i][j]);
	}
}

printf("\nStarting time   burst time\n");
for(i=0;i<t;i++)
{
	for(j=0;j<2;j++)
	{
	printf("%d                ",c[i][j]);
	}
	printf("\n");
}
int n=0;
for(i=0;i<t;i++)
{
n=n+c[t][1]
}
printf("\n");
for(i=0;i<n;i++)
{
printf("%d ",f);
f++;
}
printf("\n");
for(i=0;i<n;i++)
{
printf("%d ",c[i][1])
g=c[i][1];
g--;
}
int main()
{
int run, burst;
int a;


printf("Enter the number of processes: ");
scanf("%d",&a);

//printf("\nEnter the service time of each process: ");
//scanf("%d",&burst);


time(a);
}
